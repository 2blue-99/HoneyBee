<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="content_title"
            type="String" />

        <variable
            name="date"
            type="String" />

        <variable
            name="content"
            type="String" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.notice.NoticeShowFragment"
        android:orientation="vertical"
        android:background="@color/main_background_white"
        >

        <include
            android:id="@+id/base_component"
            layout="@layout/base_background_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:title="@{@string/notice_add_title}" />

        <ImageButton
            android:id="@+id/add_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/icon_add_filled"
            android:backgroundTint="#545454"
            app:layout_constraintBottom_toBottomOf="@+id/base_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/base_component"
            tools:layout_editor_absoluteX="0dp">

            <EditText
                android:id="@+id/titleEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="제목을 입력해주세요."
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@color/gray_line" />

            <EditText
                android:id="@+id/contentEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="내용을 입력해주세요." />
        </LinearLayout>

        <include
            android:visibility="invisible"
            android:id="@+id/layoutLoadingProgress"
            layout="@layout/layout_loading_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
